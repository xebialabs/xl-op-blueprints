apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    control-plane: controller-manager
    control-app: digitalai-deploy
    app.kubernetes.io/name: deployment
    app.kubernetes.io/instance: controller-manager
    app.kubernetes.io/component: manager
    app.kubernetes.io/created-by: xld
    app.kubernetes.io/part-of: xld
  name: xld-operator-controller-manager
spec:
  replicas: 1
  selector:
    matchLabels:
      control-plane: controller-manager
      control-app: digitalai-deploy
  template:
    metadata:
      annotations:
        kubectl.kubernetes.io/default-container: manager
      labels:
        control-plane: controller-manager
        control-app: digitalai-deploy
    spec:
      securityContext:
        runAsNonRoot: true
      {{- if eq .ImageRegistryType "private" }}
      imagePullSecrets:
        - name: {{ .CustomPrivateImageRegistrySecret }}
      {{- end }}
      containers:
      - name: manager
        securityContext:
          allowPrivilegeEscalation: false
          capabilities:
            drop:
            - "ALL"
        args:
        - "--health-probe-bind-address=:8081"
        - "--metrics-bind-address=127.0.0.1:8080"
        - "--leader-elect"
        - "--leader-election-id=xld-operator-controller-manager"
        # uncomment for debug
        #- "--zap-encoder=console"
        #- "--zap-log-level=debug"
        {{- if eq .IsCustomImageRegistry true }}
        image: {{ .CustomImageRegistryName }}/{{ .RepositoryName }}/{{ .OperatorImageDeploy }}:{{ .OperatorImageTag }}
        {{- else }}
        image: docker.io/{{ .RepositoryName }}/{{ .OperatorImageDeploy }}:{{ .OperatorImageTag }}
        {{- end }}
        imagePullPolicy: Always
        env:
        - name: WATCH_NAMESPACE
          valueFrom:
            fieldRef:
              fieldPath: metadata.namespace
        livenessProbe:
          httpGet:
            path: /readyz
            port: 8081
          initialDelaySeconds: 10
          periodSeconds: 20
        readinessProbe:
          httpGet:
            path: /healthz
            port: 8081
          initialDelaySeconds: 5
          periodSeconds: 10
        resources:
          limits:
            cpu: 500m
            memory: 512Mi
          requests:
            cpu: 10m
            memory: 64Mi
      terminationGracePeriodSeconds: 10
