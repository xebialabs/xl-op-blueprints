  TinyToolsImageRepository: "{{ .RepositoryName }}/tiny-tools"
  {{- else }}
  TinyToolsImageRepository: "xebialabs/tiny-tools"
  {{- end }}
  TinyToolsImageTag: "22.2.0"
  {{- if eq .ImageRegistryType "private" }}
  ImagePullSecret: {{ .CustomPrivateImageRegistrySecret }}
  {{- end }}
  # Secrets must be manually created in the namespace
  # ImagePullSecret: xlDeploy
  KeystorePassphrase: '{{ .KeystorePassphrase }}'
  Persistence:
    AccessMode: {{ .AccessModeDeploy }}
    Annotations: {}
    Enabled: true
    # Choose storage class provided by your cloud provider, example "ssd" on GKE, AWS and OpenStack
    StorageClass: '{{ .StorageClass }}'
    XldMasterPvcSize: {{ .PvcSizeDeploy }}Gi
    XldWorkerPvcSize: {{ .PvcSizeDeployTaskEngine }}Gi
  # https://docs.xebialabs.com/v.9.8/deploy/how-to/update-the-xl-deploy-digital-certificate/#get-started
  # Convert repository-keystore.jceks files content to base64
  # ( cat repository-keystore.jceks | base64 -w 0 ) and put the output here
  RepositoryKeystore: '{{ trim .RepositoryKeystore }}'
  UseExistingDB:
    {{- if eq .EnablePostgresql true }}
    Enabled: false
    {{- else }}
    Enabled: true
    # If you want to use an existing database.
    # Set 'postgresql.install' to 'false', Only when we use existing Database for both Deploy and keycloak.
    # Set 'UseExistingDB.Enabled' to 'true'.
    # Uncomment the following lines and provide the values.
    # XL_DB_PASSWORD:
    # XL_DB_URL:
    # XL_DB_USERNAME:
{{ .PostgresqlExternalConfigDeploy | indent 4 }}
    {{- end }}
  UseExistingMQ:
    {{- if eq .EnableRabbitmq true }}
    Enabled: false
    {{- else }}
    Enabled: true
    # If you want to use a existing Message Queue.
    # Set the "rabbitmq.install to false"
    # Set 'UseExistingMQ.Enabled' to 'true'.
    # Uncomment the following lines and provide the values.
    # XLD_TASK_QUEUE_DRIVER_CLASS_NAME:
    # XLD_TASK_QUEUE_PASSWORD:
    # XLD_TASK_QUEUE_URL:
    # XLD_TASK_QUEUE_USERNAME:
{{ .RabbitmqExternalConfigDeploy | indent 4 }}
    {{- end }}
  XldMasterCount: {{ .XldMasterCount }}
  XldWorkerCount: {{ .XldWorkerCount }}
  affinity: {}
  deploy:
    configurationManagement:
      centralConfiguration:
        configuration:
          enabled: true
          resetFiles: ## Resets part of the configuration files
            - xlc-wrapper.conf.common
            - jmx-exporter.yaml
          resetCcFiles:
            - deploy-server.yaml
      master:
        configuration:
          enabled: true
