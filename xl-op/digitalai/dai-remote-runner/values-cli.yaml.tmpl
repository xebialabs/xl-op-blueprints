global:
  {{- if eq .K8sSetup "PlainK8s" }}
  cloudInstallation: false
  {{- else }}
  cloudInstallation: true
  {{- end }}
  baseHostPath: "/workspace"
  {{- if eq .ImageRegistryType "private" }}
  imagePullSecrets:
    - {{ .CustomPrivateImageRegistrySecret }}
  {{- end }}
  namespace:
    create: false
    name: {{ .Namespace }}
image:
  {{- if eq .IsCustomImageRegistry true }}
  registry: {{ .CustomImageRegistryName }}
  {{- end }}
  repository: {{ .RepositoryName }}
  name: {{ .ImageNameRemoteRunner }}
  tag: {{ .ImageTagRemoteRunner }}
release:
  url: {{ .RemoteRunnerReleaseUrl }}
  registrationToken: {{ .RemoteRunnerToken }}
remote-runner-env:
  volume:
    storageClass: {{ .RemoteRunnerStorageClass }}
runner:
  truststore: false
